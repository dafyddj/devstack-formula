#SITE & RELEASE SPECIFIC DATA

    {%- set yoursvc_name = 'keystone' %}
    {%- set yoursvc_version = 'v0.2.0' %}
    {%- set yoursvc_port = '50040' %}
    {%- set yoursvc_type = yoursvc_name %}
    {%- set yoursvc_region = 'RegionOne' %}
    {%- set yoursvc_endpoint = yoursvc_name ~ yoursvc_version %}
    {%- set enabled_services = 'mysql,key' %}

    {%- set os_project_name = 'default' %}
    {%- set os_password = 'devstack' %}
    {%- set host_ipv4 = grains.ipv4[-1] or '127.0.0.1' %}
    {%- set db_host = '127.0.0.1' %}  {# https://bugs.launchpad.net/devstack/+bug/1735097 #}
    {%- set host_ipv6 = '' if not grains.ipv6 else grains.ipv6[-1] %}


#DATA DICTIONARY

devstack:
  hide_output: False    #view output from stack.sh
  local:
    stack_user: stack
    os_password: {{ os_password }}
    os_project_name: {{ os_project_name }}
    admin_password: {{ os_password }}
    git_branch: 'stable/rocky'
    enabled_services: {{ devstack_enabled_services }}
    host_ipv4: {{ host_ipv4 }}
    host_ipv6: {{ host_ipv6 }}
    service_host: {{ host_ipv4 or host_ipv6 }}
    db_host: {{ db_host }}
  managed:
    openrc: False

  dir:
    tmp: /tmp/devstack	{# not sure why centos wants this? #}

  cli:
    user:
      create:
        {{ yoursvc_name }}:
          options:
            domain: default
            password: {{ os_password }}
            project: {{ os_project_name }}
            enable: True
      delete:
        demo:
          options:
            domain: default
        alt_demo:
          options:
            domain: default
    group:
      create:
        service:
          options:
            domain: default
      add user:
        service:
          target:
            - {{ yoursvc_name }}
        admins:
          options:
            domain: default
          target:
            - admin
    role:
      add:
        admin:
          options:
            project: {{ os_project_name }}
          user:
            - {{ yoursvc_name }}
        service:
          options:
            project: {{ os_project_name }}
          group:
            - service
    service:
      create:
        {{ yoursvc_type }}:
          options:
            name: {{ yoursvc_name }}
            type: identity
            description: {{ yoursvc_name }} Service
            enable: True
    endpoint:
      create:
        '{{ yoursvc_endpoint }} public https://{{ host_ipv4 or host_ipv6 }}/{{ yoursvc_port }}/{{ yoursvc_version }}/%\(tenant_id\)s':
          options:
            region: {{ yoursvc_region }}
            enable: True
        '{{ yoursvc_endpoint }} internal https://{{ host_ipv4 or host_ipv6 }}/{{ yoursvc_port }}/{{ yoursvc_version }}/%\(tenant_id\)s':
          options:
            region: {{ yoursvc_region }}
            enable: True
        '{{ yoursvc_endpoint }} admin https://{{ host_ipv4 or host_ipv6 }}/{{ yoursvc_port }}/{{ yoursvc_version }}/%\(tenant_id\)s':
          options:
            region: {{ yoursvc_region }}
            enable: True
    project:
      delete:
        demo:
          options:
            domain: default
        alt_demo:
          options:
            domain: default
        invisible_to_admin:
          options:
            domain: default
